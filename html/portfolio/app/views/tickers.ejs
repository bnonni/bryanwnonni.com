<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <title>Crypto Trading Algo - BTC Prices</title>
  <script src="https://code.jquery.com/jquery-3.4.1.min.js"
    integrity="sha256-CSXorXvZcTkaix6Yvo6HppcZGetbYMGWSFlBw8HfCJo=" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="/css/style.css" type="text/html">
  <style>
    h1 {
      margin-top: 0;
      margin-bottom: 0;
      text-align: center;
    }

    .tickers {
      display: flex;
      width: 85%;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .button {
      text-align: center;
    }

    button {
      padding: 0.5%;
      border-radius: 5px;
      width: 10%;
    }
  </style>
</head>

<body>
  <% if (typeof title !== 'undefined' && title.length > 0){ %>
  <h1><%= title %> Prices</h1>
  <% } %>
  <div class="button">
    <a href="/">
      <button>Home</button>
    </a>
  </div>
  <ul class="transactions">
    <% if (typeof tickers !== 'undefined' && tickers.length > 0){ %>
    <%for(var i = (tickers.length - 1); i >= (tickers.length - 20); i--){%>
    <li class="tickers">
      <% if(tickers[i].price != undefined){%>
      <div class="price"><%= tickers[i].price %></div>
      <div class="datetime">Datetime: <%= tickers[i].time %> </div>
      <div class="bid">Bid: $<%= tickers[i].bid %></div>
      <div class="ask">Ask: $<%= tickers[i].ask %></div>
      <div class="volume">Volume: <%= tickers[i].volume %></div>
      <% } %>
    </li>
    <% } 
      } %>
  </ul>
</body>

</html>